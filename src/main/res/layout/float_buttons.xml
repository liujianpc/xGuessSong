<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/game_level_title" />

        <TextView
            android:id="@+id/txt_current_stage"
            android:layout_gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true">

        <FrameLayout
            android:id="@+id/frame_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_delete_word"
                android:layout_width="50dp"
                android:layout_height="74dp"
                android:background="@drawable/delete_button_icon" />


            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"
                android:background="@drawable/game_coin_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@integer/pay_delete_answer"
                android:textSize="13dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="bottom|right"
                android:textColor="#FFFFFF" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_tip"
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_tip_answer"
                android:layout_width="50dp"
                android:layout_height="74dp"
                android:background="@drawable/tip_button_icon" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"
                android:background="@drawable/game_coin_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@integer/pay_tip_answer"
                android:textSize="13dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="bottom|right"
                android:textColor="#FFFFFF" />
        </FrameLayout>


    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_share"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:onClick="share"
        android:background="@drawable/share_button_icon"
        android:layout_width="50dp"
        android:layout_height="50dp" />

</RelativeLayout>